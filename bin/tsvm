#!/usr/bin/env node

// TypeScript VM Binary Executable
// This script serves as the main entry point for the tsvm command

const path = require('path');
const fs = require('fs');

// Check if we're running from source or compiled
const srcPath = path.join(__dirname, '../src/cli/index.ts');
const distPath = path.join(__dirname, '../dist/cli/index.js');

if (fs.existsSync(distPath)) {
  // Running from compiled JavaScript
  require(distPath);
} else if (fs.existsSync(srcPath)) {
  // Running from TypeScript source (development)
  try {
    require('ts-node/register');
    require(srcPath);
  } catch (error) {
    console.error('Error: ts-node is required to run from source.');
    console.error('Please install ts-node or build the project first:');
    console.error('  npm install -g ts-node');
    console.error('  or');
    console.error('  npm run build');
    process.exit(1);
  }
} else {
  console.error('Error: TypeScript VM not found.');
  console.error('Please build the project first: npm run build');
  process.exit(1);
}